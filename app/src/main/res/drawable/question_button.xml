<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_text_color" />
            <stroke android:width="2dp" android:color="@color/primary_bg_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_bg_color" />
                    <stroke android:width="2dp" android:color="@color/primary_text_color" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
