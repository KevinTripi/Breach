<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/activity_padding_vertical"
    android:paddingHorizontal="@dimen/activity_padding_horizontal">

    <!-- Main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Role section  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player Roles:"
                android:textSize="@dimen/medium_text"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/listview_role"/>
        </LinearLayout>

        <!-- Location section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Locations label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locations:"
                android:textSize="@dimen/medium_text"/>

            <!-- Holds the location values. Populated programmatically.
                 I was thinking of doing a TableLayout, but want the list to be dynamic. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <!-- Left column -->
                <ListView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/listview_location_left"/>

                <!-- Right column -->
                <ListView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/listview_location_right"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Timer section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:text="Start Timer"
                android:layout_gravity="center"
                android:id="@+id/button_timer"
                android:textSize="@dimen/medium_text"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="0:00"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/textview_timer"
                android:textSize="@dimen/medium_text"/>
        </LinearLayout>

        <!-- End game button section -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Game"
            android:id="@+id/button_end_game"
            android:textSize="@dimen/medium_text"/>
    </LinearLayout>

    <!-- Popup layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center"
        android:padding="10dp"
        android:id="@+id/linearlayout_popup_role"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Player"
            android:id="@+id/textview_popup_player"
            android:textSize="@dimen/medium_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textSize="@dimen/medium_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_popup_location"
                android:text="Location:"
                android:textSize="@dimen/medium_text"
                android:paddingStart="10dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role:"
                android:textSize="@dimen/medium_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:id="@+id/textview_popup_role"
                android:textSize="@dimen/medium_text"
                android:paddingStart="10dp"/>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:id="@+id/button_end_popup"
            android:textSize="@dimen/medium_text"/>
    </LinearLayout>
</FrameLayout>