<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndActivity"
    android:orientation="vertical"
    android:paddingVertical="@dimen/activity_padding_vertical"
    android:paddingHorizontal="@dimen/activity_padding_horizontal"
    android:background="@drawable/screen_stroke_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/float_text_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_end_location"
            android:text="Location:"
            android:textSize="@dimen/medium_text"
            android:paddingStart="10dp"
            android:textColor="@color/float_text_color"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breacher:"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/float_text_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:id="@+id/textview_end_breachers"
            android:textSize="@dimen/medium_text"
            android:paddingStart="10dp"
            android:textColor="@color/float_text_color"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/button_end_game"
        android:textSize="@dimen/medium_text"
        android:background="@drawable/button_3d_background"/>
</LinearLayout>